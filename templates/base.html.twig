<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}

            {#{{ encore_entry_link_tags('app') }}#}

        {% endblock %}

         <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/ab9fd2bab2.js" crossorigin="anonymous"></script>
        {% block javascripts %}

            
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
      <style>
           body{
           margin: 0px; 
           padding: 0px; 
           font-size: 13px; 
           font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; 
           color:white; 
           line-height: 1.5; 
           background: linear-gradient(to bottom right, rgb(235, 235, 235 ), rgb(255, 255, 255 )) no-repeat center fixed;
           -webkit-background-size: cover;
       }
        a:link{
            text-decoration: none;
        }
        a{
            color:black;
            text-decoration: none;

        }
        a:hover {
            color: black;
        }

        .accueil {
            text-align: center;
            align-items: center;
            display: flex;
            justify-content: center;
        }
        .choix {
            margin-top: 5%;
            width: 30%;
            background-color: white;
            height: 400px;
            box-shadow: 12px 12px 2px 1px rgba(0, 0, 255, .2);
            transition : 1s;
        }
        .choix:hover {
            margin-top: 10%;
            width: 30%;
            background-color: #5CDCFF;
            height: 400px;
            box-shadow: 12px 12px 2px 1px rgb(73, 37, 255);
            transition : 1s;
        }
        .place {
            display: flex;
            justify-content: space-around;
        }

        .title{
            font-size: 30px;
            font-weight: bold;
            padding: 20px;
            text-align: center;
        }
        header{
            background: black;
        }
        h1{
            font-size: 80px;
            font-weight: bold;
            color: white;
            
        }
img{
    margin-top: 15%;
}
@media screen and (max-width: 1000px){
        .place {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
         .choix {
            margin-top: 5%;
            width: 100%;
            background-color: white;
            height: 400px;
            box-shadow: 12px 12px 2px 1px rgba(0, 0, 255, .2);
            transition : 1s;
        }
        .choix:hover {
            margin-top: 10%;
            width: 100%;
            background-color: #5CDCFF;
            height: 400px;
            box-shadow: 12px 12px 2px 1px rgb(73, 37, 255);
            transition : 1s;
        }
img{
    margin-top: 10%;
}
}
            </style>
    <body>
        {% block body %}

        
        {% endblock %}
    </body>
</html>
